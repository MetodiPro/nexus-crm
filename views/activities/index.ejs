<div class="card">
    <div class="card-header bg-nexus-dark text-white flex justify-between items-center">
      <h4 class="text-lg font-semibold"><i class="fas fa-tasks"></i> Gestione Attività</h4>
      <div class="space-x-2">
        <a href="/activities/calendar" class="bg-gray-600 text-white px-3 py-1 rounded text-sm hover:bg-gray-700 transition-colors">
          <i class="fas fa-calendar"></i> Calendario
        </a>
        <a href="/activities/new" class="bg-nexus-red text-white px-3 py-1 rounded text-sm hover:bg-red-700 transition-colors">
          <i class="fas fa-plus"></i> Nuova Attività
        </a>
      </div>
    </div>
    <div class="card-body">
      <!-- Filtri attività -->
      <div class="mb-6 flex flex-wrap gap-2">
        <a href="/activities" class="px-3 py-1 rounded text-sm border border-gray-300 hover:bg-gray-100">
          Tutte
        </a>
        <a href="/activities?status=pending" class="px-3 py-1 rounded text-sm border border-yellow-300 bg-yellow-50 text-yellow-800 hover:bg-yellow-100">
          In attesa
        </a>
        <a href="/activities?status=completed" class="px-3 py-1 rounded text-sm border border-green-300 bg-green-50 text-green-800 hover:bg-green-100">
          Completate
        </a>
        <a href="/activities?status=cancelled" class="px-3 py-1 rounded text-sm border border-red-300 bg-red-50 text-red-800 hover:bg-red-100">
          Annullate
        </a>
      </div>
  
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Data</th>
              <th>Cliente</th>
              <th>Titolo</th>
              <th>Stato</th>
              <th>Azioni</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% if (activities && activities.length > 0) { %>
              <% activities.forEach(activity => { %>
                <tr>
                  <td class="align-middle whitespace-nowrap">
                    <%= new Date(activity.activity_date).toLocaleDateString() %>
                    <div class="text-xs text-gray-500">
                      <%= new Date(activity.activity_date).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                    </div>
                  </td>
                  <td class="align-middle">
                    <a href="/clients/view/<%= activity.client_id %>" class="font-medium text-nexus-red hover:underline">
                      <%= activity.client_name %> <%= activity.client_surname %>
                    </a>
                  </td>
                  <td class="align-middle">
                    <%= activity.title %>
                  </td>
                  <td class="align-middle">
                    <span class="px-2 py-1 text-xs font-semibold rounded-full
                      <% if(activity.status === 'completed') { %>
                        bg-green-100 text-green-800
                      <% } else if(activity.status === 'cancelled') { %>
                        bg-red-100 text-red-800
                      <% } else { %>
                        bg-yellow-100 text-yellow-800
                      <% } %>
                    ">
                      <%= activity.status === 'pending' ? 'In attesa' : 
                         activity.status === 'completed' ? 'Completata' : 
                         activity.status === 'cancelled' ? 'Annullata' : activity.status %>
                    </span>
                  </td>
                  <td class="align-middle space-x-1">
                    <a href="/activities/view/<%= activity.id %>" class="inline-block bg-blue-100 text-blue-700 p-1.5 rounded hover:bg-blue-200">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/activities/edit/<%= activity.id %>" class="inline-block bg-gray-200 text-gray-700 p-1.5 rounded hover:bg-gray-300">
                      <i class="fas fa-edit"></i>
                    </a>
                    <a href="/activities/delete/<%= activity.id %>" class="inline-block bg-red-100 text-red-700 p-1.5 rounded hover:bg-red-200 delete-btn" 
                       onclick="return confirm('Sei sicuro di voler eliminare questa attività?')">
                      <i class="fas fa-trash"></i>
                    </a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="5" class="text-center py-4 text-gray-500">Nessuna attività trovata</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>