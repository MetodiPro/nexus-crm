<div class="card">
    <div class="card-header bg-nexus-dark text-white flex justify-between items-center">
      <h4 class="text-lg font-semibold"><i class="fas fa-box"></i> Gestione Listino Prodotti</h4>
      <a href="/products/new" class="bg-nexus-red text-white px-3 py-1 rounded text-sm hover:bg-red-700 transition-colors">
        <i class="fas fa-plus"></i> Nuovo Prodotto
      </a>
    </div>
    <div class="card-body">
      <div class="table-container">
        <table class="table">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Tipo Energia</th>
              <th>Fornitore</th>
              <th>Prezzo Base</th>
              <th>Stato</th>
              <th>Azioni</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% if (products && products.length > 0) { %>
              <% products.forEach(product => { %>
                <tr>
                  <td class="align-middle">
                    <div class="font-medium"><%= product.name %></div>
                  </td>
                  <td class="align-middle">
                    <%= product.energy_type === 'electricity' ? 'Energia Elettrica' : 
                       product.energy_type === 'gas' ? 'Gas Naturale' : 
                       product.energy_type === 'both' ? 'Dual Fuel' : product.energy_type %>
                  </td>
                  <td class="align-middle"><%= product.supplier || '-' %></td>
                  <td class="align-middle whitespace-nowrap">
                    <%= product.base_price ? 'â‚¬ ' + product.base_price.toFixed(2) : '-' %>
                  </td>
                  <td class="align-middle">
                    <span class="px-2 py-1 text-xs font-semibold rounded-full
                      <%= product.is_active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800' %>
                    ">
                      <%= product.is_active ? 'Attivo' : 'Disattivato' %>
                    </span>
                  </td>
                  <td class="align-middle space-x-1">
                    <a href="/products/view/<%= product.id %>" class="inline-block bg-blue-100 text-blue-700 p-1.5 rounded hover:bg-blue-200">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/products/edit/<%= product.id %>" class="inline-block bg-gray-200 text-gray-700 p-1.5 rounded hover:bg-gray-300">
                      <i class="fas fa-edit"></i>
                    </a>
                    <a href="/products/delete/<%= product.id %>" class="inline-block bg-red-100 text-red-700 p-1.5 rounded hover:bg-red-200 delete-btn" 
                       onclick="return confirm('Sei sicuro di voler eliminare questo prodotto?')">
                      <i class="fas fa-trash"></i>
                    </a>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="6" class="text-center py-4 text-gray-500">
                  Nessun prodotto trovato nel listino. <a href="/products/new" class="text-nexus-red hover:underline">Aggiungi il primo prodotto</a>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>
  </div>