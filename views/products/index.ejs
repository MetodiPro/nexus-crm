<div class="bg-white rounded-lg shadow-md">
  <div class="px-6 py-4 bg-nexus-dark text-white flex justify-between items-center">
    <h1 class="text-xl font-semibold">
      <i class="fas fa-box mr-2"></i>
      Prodotti/Servizi
    </h1>
    <a href="/products/new" class="btn-white">
      <i class="fas fa-plus mr-2"></i>Nuovo Prodotto
    </a>
  </div>
  
  <div class="p-6">
    <!-- Statistiche rapide -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
      <% 
        const totalProducts = products ? products.length : 0;
        const activeProducts = products ? products.filter(p => p.is_active).length : 0;
        const electricityProducts = products ? products.filter(p => p.service_type === 'Energia Elettrica').length : 0;
        const gasProducts = products ? products.filter(p => p.service_type === 'Gas Naturale').length : 0;
        const dualProducts = products ? products.filter(p => p.service_type === 'Dual Fuel (Luce+Gas)').length : 0;
      %>
      
      <div class="bg-blue-50 p-4 rounded-lg">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-box text-blue-600 text-2xl"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-blue-900">Totali</p>
            <p class="text-2xl font-semibold text-blue-700"><%= totalProducts %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-green-50 p-4 rounded-lg">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-check-circle text-green-600 text-2xl"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-green-900">Attivi</p>
            <p class="text-2xl font-semibold text-green-700"><%= activeProducts %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-yellow-50 p-4 rounded-lg">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-bolt text-yellow-600 text-2xl"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-yellow-900">Elettrica</p>
            <p class="text-2xl font-semibold text-yellow-700"><%= electricityProducts %></p>
          </div>
        </div>
      </div>
      
      <div class="bg-orange-50 p-4 rounded-lg">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-fire text-orange-600 text-2xl"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-orange-900">Gas + Dual</p>
            <p class="text-2xl font-semibold text-orange-700"><%= gasProducts + dualProducts %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Filtri -->
    <div class="bg-gray-50 p-4 rounded-lg mb-6">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        <div>
          <label for="filterServiceType" class="block text-sm font-medium text-gray-700 mb-1">
            Filtra per Tipo Servizio
          </label>
          <select id="filterServiceType" class="w-full px-3 py-2 border border-gray-300 rounded-md" onchange="filterProducts()">
            <option value="">Tutti i servizi</option>
            <option value="Energia Elettrica">Energia Elettrica</option>
            <option value="Gas Naturale">Gas Naturale</option>
            <option value="Dual Fuel (Luce+Gas)">Dual Fuel (Luce+Gas)</option>
            <option value="Altro Servizio">Altro Servizio</option>
          </select>
        </div>
        
        <div>
          <label for="filterStatus" class="block text-sm font-medium text-gray-700 mb-1">
            Filtra per Stato
          </label>
          <select id="filterStatus" class="w-full px-3 py-2 border border-gray-300 rounded-md" onchange="filterProducts()">
            <option value="">Tutti</option>
            <option value="active">Solo Attivi</option>
            <option value="inactive">Solo Inattivi</option>
          </select>
        </div>
        
        <div>
          <label for="searchProduct" class="block text-sm font-medium text-gray-700 mb-1">
            Cerca Prodotto
          </label>
          <input type="text" id="searchProduct" placeholder="Nome prodotto o fornitore..." 
                 class="w-full px-3 py-2 border border-gray-300 rounded-md" 
                 onkeyup="filterProducts()">
        </div>
      </div>
    </div>

    <!-- Menu azioni rapide -->
    <div class="mb-6 flex flex-wrap gap-2">
      <a href="/products/attachments" class="btn-outline">
        <i class="fas fa-file-pdf mr-2"></i>Allegati Offerte
      </a>
      <button onclick="exportProducts()" class="btn-outline">
        <i class="fas fa-download mr-2"></i>Esporta Lista
      </button>
    </div>

    <!-- Tabella prodotti -->
    <div class="overflow-x-auto">
      <table class="min-w-full table-auto">
        <thead>
          <tr class="bg-gray-50">
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-900">Prodotto/Servizio</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-900">Tipo Servizio</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-900">Fornitore/Operatore</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-900">Tariffe</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-900">PDF</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-900">Stato</th>
            <th class="px-4 py-3 text-left text-sm font-medium text-gray-900">Azioni</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200" id="productsTableBody">
          <% if (products && products.length > 0) { %>
            <% products.forEach(product => { %>
              <tr class="product-row hover:bg-gray-50" 
                  data-service-type="<%= product.service_type %>" 
                  data-status="<%= product.is_active ? 'active' : 'inactive' %>"
                  data-search="<%= (product.name + ' ' + product.supplier_operator).toLowerCase() %>">
                
                <!-- Nome Prodotto -->
                <td class="px-4 py-4">
                  <div>
                    <div class="text-sm font-medium text-gray-900">
                      <%= product.name %>
                    </div>
                    <% if (product.description_notes) { %>
                      <div class="text-sm text-gray-500 truncate max-w-xs">
                        <%= product.description_notes.substring(0, 50) %>...
                      </div>
                    <% } %>
                  </div>
                </td>
                
                <!-- Tipo Servizio -->
                <td class="px-4 py-4">
                  <% let serviceTypeClass = 'bg-gray-100 text-gray-800'; %>
                  <% if (product.service_type === 'Energia Elettrica') serviceTypeClass = 'bg-blue-100 text-blue-800'; %>
                  <% if (product.service_type === 'Gas Naturale') serviceTypeClass = 'bg-orange-100 text-orange-800'; %>
                  <% if (product.service_type === 'Dual Fuel (Luce+Gas)') serviceTypeClass = 'bg-purple-100 text-purple-800'; %>
                  <% if (product.service_type === 'Altro Servizio') serviceTypeClass = 'bg-yellow-100 text-yellow-800'; %>
                  
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= serviceTypeClass %>">
                    <% if (product.service_type === 'Energia Elettrica') { %>
                      <i class="fas fa-bolt mr-1"></i>
                    <% } else if (product.service_type === 'Gas Naturale') { %>
                      <i class="fas fa-fire mr-1"></i>
                    <% } else if (product.service_type === 'Dual Fuel (Luce+Gas)') { %>
                      <i class="fas fa-bolt mr-1"></i><i class="fas fa-fire"></i>
                    <% } else { %>
                      <i class="fas fa-cog mr-1"></i>
                    <% } %>
                    <%= product.service_type %>
                  </span>
                </td>
                
                <!-- Fornitore -->
                <td class="px-4 py-4">
                  <div class="text-sm text-gray-900"><%= product.supplier_operator %></div>
                </td>
                
                <!-- Tariffe -->
                <td class="px-4 py-4">
                  <div class="text-xs space-y-1">
                    <% if (product.electricity_fixed_rate) { %>
                      <div class="bg-blue-50 px-2 py-1 rounded">
                        <i class="fas fa-bolt text-blue-600 mr-1"></i>
                        Fissa: €<%= product.electricity_fixed_rate %>/kWh
                      </div>
                    <% } %>
                    <% if (product.electricity_variable_spread) { %>
                      <div class="bg-blue-50 px-2 py-1 rounded">
                        <i class="fas fa-chart-line text-blue-600 mr-1"></i>
                        PUN + €<%= product.electricity_variable_spread %>/kWh
                      </div>
                    <% } %>
                    <% if (product.gas_fixed_rate) { %>
                      <div class="bg-orange-50 px-2 py-1 rounded">
                        <i class="fas fa-fire text-orange-600 mr-1"></i>
                        Fissa: €<%= product.gas_fixed_rate %>/Smc
                      </div>
                    <% } %>
                    <% if (product.gas_variable_spread) { %>
                      <div class="bg-orange-50 px-2 py-1 rounded">
                        <i class="fas fa-chart-line text-orange-600 mr-1"></i>
                        PSV + €<%= product.gas_variable_spread %>/Smc
                      </div>
                    <% } %>
                    
                    <!-- Costi aggiuntivi -->
                    <% if (product.additional_cost1_description) { %>
                      <div class="bg-yellow-50 px-2 py-1 rounded text-xs">
                        <%= product.additional_cost1_description %>: 
                        €<%= product.additional_cost1_value %> 
                        <%= product.additional_cost1_unit %>
                      </div>
                    <% } %>
                  </div>
                </td>
                
                <!-- PDF -->
                <td class="px-4 py-4 text-center">
                  <% if (product.pdf_attachment_filename) { %>
                    <a href="/products/download/<%= product.id %>" class="text-red-600 hover:text-red-800" title="<%= product.pdf_attachment_filename %>">
                      <i class="fas fa-file-pdf text-lg"></i>
                    </a>
                  <% } else { %>
                    <span class="text-gray-300">
                      <i class="fas fa-file text-lg"></i>
                    </span>
                  <% } %>
                </td>
                
                <!-- Stato -->
                <td class="px-4 py-4">
                  <% if (product.is_active) { %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <i class="fas fa-check-circle mr-1"></i>Attivo
                    </span>
                  <% } else { %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
                      <i class="fas fa-times-circle mr-1"></i>Inattivo
                    </span>
                  <% } %>
                </td>
                
                <!-- Azioni -->
                <td class="px-4 py-4">
                  <div class="flex space-x-2">
                    <a href="/products/view/<%= product.id %>" class="text-blue-600 hover:text-blue-800" title="Visualizza">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/products/edit/<%= product.id %>" class="text-green-600 hover:text-green-800" title="Modifica">
                      <i class="fas fa-edit"></i>
                    </a>
                    <a href="/products/delete/<%= product.id %>" class="text-red-600 hover:text-red-800 delete-btn" 
                       title="Elimina" onclick="return confirm('Sei sicuro di voler eliminare questo prodotto?')">
                      <i class="fas fa-trash"></i>
                    </a>
                  </div>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center py-8 text-gray-500">
                <div class="space-y-3">
                  <i class="fas fa-box text-4xl text-gray-300"></i>
                  <p>Nessun prodotto trovato nel listino.</p>
                  <a href="/products/new" class="text-nexus-red hover:underline">
                    <i class="fas fa-plus mr-1"></i>Aggiungi il primo prodotto
                  </a>
                </div>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
    
    <!-- Risultati filtro -->
    <div id="filterResults" class="mt-4 text-sm text-gray-600 hidden">
      Mostrando <span id="visibleCount">0</span> di <span id="totalCount"><%= totalProducts %></span> prodotti
    </div>
  </div>
</div>

<script>
// Funzione per filtrare i prodotti
function filterProducts() {
  const serviceTypeFilter = document.getElementById('filterServiceType').value;
  const statusFilter = document.getElementById('filterStatus').value;
  const searchFilter = document.getElementById('searchProduct').value.toLowerCase();
  
  const rows = document.querySelectorAll('.product-row');
  let visibleCount = 0;
  
  rows.forEach(row => {
    let showRow = true;
    
    // Filtro tipo servizio
    if (serviceTypeFilter && row.dataset.serviceType !== serviceTypeFilter) {
      showRow = false;
    }
    
    // Filtro stato
    if (statusFilter && row.dataset.status !== statusFilter) {
      showRow = false;
    }
    
    // Filtro ricerca
    if (searchFilter && !row.dataset.search.includes(searchFilter)) {
      showRow = false;
    }
    
    if (showRow) {
      row.style.display = '';
      visibleCount++;
    } else {
      row.style.display = 'none';
    }
  });
  
  // Mostra risultati filtro
  const filterResults = document.getElementById('filterResults');
  const visibleCountSpan = document.getElementById('visibleCount');
  
  if (serviceTypeFilter || statusFilter || searchFilter) {
    visibleCountSpan.textContent = visibleCount;
    filterResults.classList.remove('hidden');
  } else {
    filterResults.classList.add('hidden');
  }
}

// Funzione per esportare i prodotti
function exportProducts() {
  const data = [];
  const rows = document.querySelectorAll('.product-row');
  
  rows.forEach(row => {
    if (row.style.display !== 'none') {
      const cells = row.querySelectorAll('td');
      data.push({
        prodotto: cells[0].textContent.trim(),
        tipo: cells[1].textContent.trim(),
        fornitore: cells[2].textContent.trim(),
        stato: cells[5].textContent.trim()
      });
    }
  });
  
  // Crea CSV
  const csvContent = "data:text/csv;charset=utf-8," 
    + "Prodotto,Tipo Servizio,Fornitore,Stato\n"
    + data.map(row => Object.values(row).join(",")).join("\n");
  
  const encodedUri = encodeURI(csvContent);
  const link = document.createElement("a");
  link.setAttribute("href", encodedUri);
  link.setAttribute("download", "prodotti_servizi.csv");
  document.body.appendChild(link);
  link.click();
  document.body.removeChild(link);
}

// Reset filtri
function resetFilters() {
  document.getElementById('filterServiceType').value = '';
  document.getElementById('filterStatus').value = '';
  document.getElementById('searchProduct').value = '';
  filterProducts();
}
</script>
