<div class="bg-white rounded-lg shadow-md">
  <div class="px-6 py-4 bg-nexus-dark text-white">
    <h1 class="text-xl font-semibold">
      <i class="fas fa-box mr-2"></i>
      Dettagli Prodotto/Servizio
    </h1>
  </div>
  
  <div class="p-6">
    <!-- Informazioni principali -->
    <%- include('partials/product-general-info', { product }) %>
    
    <!-- Tariffe Energia Elettrica -->
    <% if (product.service_type === 'Energia Elettrica' || product.service_type === 'Dual Fuel (Luce+Gas)') { %>
      <%- include('partials/product-electricity-rates', { product }) %>
    <% } %>

    <!-- Tariffe Gas Naturale -->
    <% if (product.service_type === 'Gas Naturale' || product.service_type === 'Dual Fuel (Luce+Gas)') { %>
      <%- include('partials/product-gas-rates', { product }) %>
    <% } %>

    <!-- Costi Aggiuntivi -->
    <%- include('partials/product-additional-costs', { product }) %>

    <!-- Allegato PDF -->
    <%- include('partials/product-attachment', { product }) %>

    <!-- Descrizione/Note -->
    <%- include('partials/product-description', { product }) %>
    
    <!-- Bottoni azioni -->
    <%- include('partials/product-actions', { product }) %>
  </div>
</div>
