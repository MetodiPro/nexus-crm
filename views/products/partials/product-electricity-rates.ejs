<div class="bg-blue-50 p-4 rounded-lg mb-6">
  <h3 class="text-lg font-medium text-blue-900 mb-4">
    <i class="fas fa-bolt mr-2"></i>Tariffe Energia Elettrica
  </h3>
  
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    <% if (product.electricity_fixed_rate) { %>
    <div class="bg-white p-3 rounded border-l-4 border-blue-500">
      <div class="text-sm font-medium text-gray-500">Tariffa Fissa</div>
      <div class="text-xl font-bold text-blue-600">€<%= product.electricity_fixed_rate %>/kWh</div>
      <div class="text-xs text-gray-500">Prezzo fisso per kWh</div>
    </div>
    <% } %>
    
    <% if (product.electricity_variable_spread) { %>
    <div class="bg-white p-3 rounded border-l-4 border-blue-500">
      <div class="text-sm font-medium text-gray-500">Tariffa Variabile</div>
      <div class="text-xl font-bold text-blue-600">PUN + €<%= product.electricity_variable_spread %>/kWh</div>
      <div class="text-xs text-gray-500">Spread su Prezzo Unico Nazionale</div>
    </div>
    <% } %>
    
    <% if (product.electricity_other_rate_notes) { %>
    <div class="bg-white p-3 rounded border-l-4 border-blue-500">
      <div class="text-sm font-medium text-gray-500">Altra Tariffa</div>
      <div class="text-sm text-gray-700 mt-1"><%= product.electricity_other_rate_notes %></div>
    </div>
    <% } %>
  </div>
</div>
