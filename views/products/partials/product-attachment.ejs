<% if (product.pdf_attachment_filename) { %>
<div class="bg-green-50 p-4 rounded-lg mb-6">
  <h3 class="text-lg font-medium text-green-900 mb-4">
    <i class="fas fa-file-pdf mr-2"></i>Allegato PDF
  </h3>
  
  <div class="bg-white p-4 rounded border">
    <div class="flex items-center justify-between">
      <div>
        <p class="text-sm font-medium text-gray-900">
          <i class="fas fa-file-pdf text-red-500 mr-2"></i>
          <%= product.pdf_attachment_filename %>
        </p>
        <p class="text-xs text-gray-500 mt-1">
          Caricato il <%= product.pdf_upload_date ? new Date(product.pdf_upload_date).toLocaleDateString('it-IT') : 'N/A' %>
        </p>
      </div>
      <div class="flex space-x-2">
        <a href="/products/download/<%= product.id %>" 
           class="bg-nexus-red text-white px-3 py-1 rounded text-sm hover:bg-red-700">
          <i class="fas fa-download mr-1"></i>Scarica
        </a>
      </div>
    </div>
  </div>
</div>
<% } %>
