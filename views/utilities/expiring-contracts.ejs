<div class="max-w-7xl mx-auto">
  <!-- Header -->
  <div class="mb-6">
    <!-- Breadcrumb e navigazione -->
    <div class="mb-4">
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="inline-flex items-center space-x-1 md:space-x-3">
          <li class="inline-flex items-center">
            <a href="/" class="text-gray-700 hover:text-nexus-red">
              <i class="fas fa-home"></i> Dashboard
            </a>
          </li>
          <li>
            <div class="flex items-center">
              <i class="fas fa-chevron-right text-gray-400 mx-2"></i>
              <a href="/contracts" class="text-gray-700 hover:text-nexus-red">Proposte/Contratti</a>
            </div>
          </li>
          <li aria-current="page">
            <div class="flex items-center">
              <i class="fas fa-chevron-right text-gray-400 mx-2"></i>
              <span class="text-gray-500">Contratti in Scadenza</span>
            </div>
          </li>
        </ol>
      </nav>
    </div>
    
    <!-- Titolo e azioni -->
    <div class="flex justify-between items-center">
      <div>
        <h2 class="text-2xl font-bold flex items-center">
          <i class="fas fa-exclamation-triangle mr-3 text-orange-500"></i>
          Contratti in Scadenza
        </h2>
        <p class="text-gray-600 mt-1">
          Contratti che scadono nei prossimi <%= days %> giorni
        </p>
      </div>
      <div class="flex space-x-2">
        <!-- Pulsante torna indietro -->
        <a href="/contracts" class="btn-outline">
          <i class="fas fa-arrow-left"></i> Torna ai Contratti
        </a>
        <!-- Filtri giorni -->
        <div class="space-x-2">
          <a href="/utilities/expiring-contracts?days=30" 
             class="btn-outline btn-sm <%= days == 30 ? 'bg-gray-100' : '' %>">
            30 giorni
          </a>
          <a href="/utilities/expiring-contracts?days=60" 
             class="btn-outline btn-sm <%= days == 60 ? 'bg-gray-100' : '' %>">
            60 giorni
          </a>
          <a href="/utilities/expiring-contracts?days=90" 
             class="btn-outline btn-sm <%= days == 90 ? 'bg-gray-100' : '' %>">
            90 giorni
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Statistiche -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <div class="card border-l-4 border-red-500">
      <div class="card-body text-center">
        <div class="text-red-500 text-3xl mb-2">
          <i class="fas fa-bolt"></i>
        </div>
        <h6 class="font-semibold text-gray-700">Contratti Elettrici</h6>
        <p class="text-2xl font-bold text-red-600"><%= electricExpiring.length %></p>
        <p class="text-xs text-gray-500">in scadenza</p>
      </div>
    </div>

    <div class="card border-l-4 border-orange-500">
      <div class="card-body text-center">
        <div class="text-orange-500 text-3xl mb-2">
          <i class="fas fa-fire"></i>
        </div>
        <h6 class="font-semibold text-gray-700">Contratti Gas</h6>
        <p class="text-2xl font-bold text-orange-600"><%= gasExpiring.length %></p>
        <p class="text-xs text-gray-500">in scadenza</p>
      </div>
    </div>

    <div class="card border-l-4 border-gray-500">
      <div class="card-body text-center">
        <div class="text-gray-500 text-3xl mb-2">
          <i class="fas fa-calendar-times"></i>
        </div>
        <h6 class="font-semibold text-gray-700">Totale</h6>
        <p class="text-2xl font-bold text-gray-600"><%= electricExpiring.length + gasExpiring.length %></p>
        <p class="text-xs text-gray-500">contratti da rinnovare</p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- CONTRATTI ELETTRICI IN SCADENZA -->
    <div class="card">
      <div class="card-header bg-red-600 text-white">
        <h5 class="font-semibold">
          <i class="fas fa-bolt mr-2"></i>
          Contratti Elettrici in Scadenza
        </h5>
      </div>
      <div class="card-body">
        <% if (electricExpiring.length > 0) { %>
          <div class="space-y-4">
            <% electricExpiring.forEach(utility => { %>
              <div class="border border-red-200 rounded-lg p-4 bg-red-50">
                <!-- Cliente -->
                <div class="flex justify-between items-start mb-2">
                  <div>
                    <h6 class="font-semibold text-red-900">
                      <%= utility.client_name %> <%= utility.client_surname %>
                      <% if (utility.company) { %>
                        - <%= utility.company %>
                      <% } %>
                    </h6>
                    <p class="text-sm text-red-700">
                      <%= utility.utility_name || 'Utenza Elettrica' %>
                    </p>
                  </div>
                  <div class="text-right">
                    <span class="px-2 py-1 bg-red-200 text-red-800 text-xs rounded-full">
                      <% 
                        const daysToExpiry = Math.ceil((new Date(utility.contract_end_date) - new Date()) / (1000 * 60 * 60 * 24));
                      %>
                      <%= daysToExpiry > 0 ? `${daysToExpiry} giorni` : 'SCADUTO' %>
                    </span>
                  </div>
                </div>

                <!-- Dettagli -->
                <div class="grid grid-cols-2 gap-4 text-sm mb-3">
                  <div>
                    <p><strong>POD:</strong> <span class="font-mono"><%= utility.pod_code %></span></p>
                    <% if (utility.supplier) { %>
                      <p><strong>Fornitore:</strong> <%= utility.supplier %></p>
                    <% } %>
                  </div>
                  <div>
                    <p><strong>Scadenza:</strong> 
                      <span class="font-semibold text-red-700">
                        <%= new Date(utility.contract_end_date).toLocaleDateString() %>
                      </span>
                    </p>
                    <% if (utility.annual_consumption_kwh) { %>
                      <p><strong>Consumo:</strong> <%= utility.annual_consumption_kwh.toLocaleString() %> kWh/anno</p>
                    <% } %>
                  </div>
                </div>

                <!-- Azioni -->
                <div class="flex justify-between items-center">
                  <div class="text-sm text-red-600">
                    <% if (utility.phone) { %>
                      <i class="fas fa-phone mr-1"></i> <%= utility.phone %>
                    <% } %>
                    <% if (utility.email) { %>
                      <i class="fas fa-envelope ml-3 mr-1"></i> <%= utility.email %>
                    <% } %>
                  </div>
                  <div class="space-x-2">
                    <a href="/clients/<%= utility.client_id %>" 
                       class="text-blue-600 hover:text-blue-800 text-sm">
                      <i class="fas fa-user"></i> Cliente
                    </a>
                    <a href="/utilities/electric/<%= utility.id %>/edit" 
                       class="text-green-600 hover:text-green-800 text-sm">
                      <i class="fas fa-edit"></i> Modifica
                    </a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center py-8 text-gray-500">
            <div class="text-4xl mb-3 text-green-500">
              <i class="fas fa-check-circle"></i>
            </div>
            <p>Nessun contratto elettrico in scadenza nei prossimi <%= days %> giorni</p>
          </div>
        <% } %>
      </div>
    </div>

    <!-- CONTRATTI GAS IN SCADENZA -->
    <div class="card">
      <div class="card-header bg-orange-600 text-white">
        <h5 class="font-semibold">
          <i class="fas fa-fire mr-2"></i>
          Contratti Gas in Scadenza
        </h5>
      </div>
      <div class="card-body">
        <% if (gasExpiring.length > 0) { %>
          <div class="space-y-4">
            <% gasExpiring.forEach(utility => { %>
              <div class="border border-orange-200 rounded-lg p-4 bg-orange-50">
                <!-- Cliente -->
                <div class="flex justify-between items-start mb-2">
                  <div>
                    <h6 class="font-semibold text-orange-900">
                      <%= utility.client_name %> <%= utility.client_surname %>
                      <% if (utility.company) { %>
                        - <%= utility.company %>
                      <% } %>
                    </h6>
                    <p class="text-sm text-orange-700">
                      <%= utility.utility_name || 'Utenza Gas' %>
                    </p>
                  </div>
                  <div class="text-right">
                    <span class="px-2 py-1 bg-orange-200 text-orange-800 text-xs rounded-full">
                      <% 
                        const daysToExpiry = Math.ceil((new Date(utility.contract_end_date) - new Date()) / (1000 * 60 * 60 * 24));
                      %>
                      <%= daysToExpiry > 0 ? `${daysToExpiry} giorni` : 'SCADUTO' %>
                    </span>
                  </div>
                </div>

                <!-- Dettagli -->
                <div class="grid grid-cols-2 gap-4 text-sm mb-3">
                  <div>
                    <p><strong>PDR:</strong> <span class="font-mono"><%= utility.pdr_code %></span></p>
                    <% if (utility.supplier) { %>
                      <p><strong>Fornitore:</strong> <%= utility.supplier %></p>
                    <% } %>
                  </div>
                  <div>
                    <p><strong>Scadenza:</strong> 
                      <span class="font-semibold text-orange-700">
                        <%= new Date(utility.contract_end_date).toLocaleDateString() %>
                      </span>
                    </p>
                    <% if (utility.annual_consumption_smc) { %>
                      <p><strong>Consumo:</strong> <%= utility.annual_consumption_smc.toLocaleString() %> Smc/anno</p>
                    <% } %>
                  </div>
                </div>

                <!-- Azioni -->
                <div class="flex justify-between items-center">
                  <div class="text-sm text-orange-600">
                    <% if (utility.phone) { %>
                      <i class="fas fa-phone mr-1"></i> <%= utility.phone %>
                    <% } %>
                    <% if (utility.email) { %>
                      <i class="fas fa-envelope ml-3 mr-1"></i> <%= utility.email %>
                    <% } %>
                  </div>
                  <div class="space-x-2">
                    <a href="/clients/<%= utility.client_id %>" 
                       class="text-blue-600 hover:text-blue-800 text-sm">
                      <i class="fas fa-user"></i> Cliente
                    </a>
                    <a href="/utilities/gas/<%= utility.id %>/edit" 
                       class="text-green-600 hover:text-green-800 text-sm">
                      <i class="fas fa-edit"></i> Modifica
                    </a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        <% } else { %>
          <div class="text-center py-8 text-gray-500">
            <div class="text-4xl mb-3 text-green-500">
              <i class="fas fa-check-circle"></i>
            </div>
            <p>Nessun contratto gas in scadenza nei prossimi <%= days %> giorni</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <!-- Actions Panel -->
  <% if (electricExpiring.length > 0 || gasExpiring.length > 0) { %>
    <div class="mt-6 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
      <div class="flex items-start">
        <div class="flex-shrink-0">
          <i class="fas fa-exclamation-triangle text-yellow-500 text-xl"></i>
        </div>
        <div class="ml-3">
          <h6 class="text-yellow-800 font-semibold">Azioni Raccomandate</h6>
          <ul class="text-yellow-700 text-sm mt-2 space-y-1">
            <li>• <strong>Contatta i clienti</strong> con contratti in scadenza</li>
            <li>• <strong>Prepara nuove offerte</strong> prima della scadenza</li>
            <li>• <strong>Verifica i consumi</strong> per proporre tariffe appropriate</li>
            <li>• <strong>Programma visite</strong> per la firma dei nuovi contratti</li>
          </ul>
          <div class="mt-3 space-x-2">
            <a href="/contracts/new" class="btn-primary btn-sm">
              <i class="fas fa-plus"></i> Nuovo Contratto
            </a>
            <a href="/activities/new" class="btn-outline btn-sm">
              <i class="fas fa-calendar-plus"></i> Programma Attività
            </a>
          </div>
        </div>
      </div>
    </div>
  <% } %>
</div>