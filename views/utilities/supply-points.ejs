<!-- Breadcrumb e Titolo -->
<div class="mb-6">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
      <li class="inline-flex items-center">
        <a href="/" class="text-gray-700 hover:text-nexus-red">
          <i class="fas fa-home"></i> Dashboard
        </a>
      </li>
      <li aria-current="page">
        <div class="flex items-center">
          <i class="fas fa-chevron-right text-gray-400 mx-2"></i>
          <span class="text-gray-500">Punti di Fornitura</span>
        </div>
      </li>
    </ol>
  </nav>
  <h1 class="text-3xl font-bold text-nexus-dark mt-4">
    <i class="fas fa-plug mr-3 text-blue-600"></i>
    Punti di Fornitura
  </h1>
  <p class="text-gray-600 mt-2">
    Gestione di tutti i punti di fornitura elettrica e gas
  </p>
</div>

<div class="max-w-7xl mx-auto">
  
  <!-- Statistiche Rapide -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
    <% 
      const electricUtilities = utilities ? utilities.filter(u => u.type === 'Elettrica') : [];
      const gasUtilities = utilities ? utilities.filter(u => u.type === 'Gas') : [];
      const totalConsumptionElectric = electricUtilities.reduce((sum, u) => sum + (parseInt(u.annual_consumption) || 0), 0);
      const totalConsumptionGas = gasUtilities.reduce((sum, u) => sum + (parseInt(u.annual_consumption) || 0), 0);
    %>
    
    <div class="card border-l-4 border-yellow-500">
      <div class="card-body">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-bolt text-2xl text-yellow-500"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-500">Utenze Elettriche</p>
            <p class="text-lg font-semibold text-gray-900"><%= electricUtilities.length %></p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="card border-l-4 border-orange-500">
      <div class="card-body">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-fire text-2xl text-orange-500"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-500">Utenze Gas</p>
            <p class="text-lg font-semibold text-gray-900"><%= gasUtilities.length %></p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="card border-l-4 border-blue-500">
      <div class="card-body">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-chart-line text-2xl text-blue-500"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-500">Consumo Elettrico Totale</p>
            <p class="text-lg font-semibold text-gray-900"><%= totalConsumptionElectric.toLocaleString() %> kWh</p>
          </div>
        </div>
      </div>
    </div>
    
    <div class="card border-l-4 border-green-500">
      <div class="card-body">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <i class="fas fa-chart-area text-2xl text-green-500"></i>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-gray-500">Consumo Gas Totale</p>
            <p class="text-lg font-semibold text-gray-900"><%= totalConsumptionGas.toLocaleString() %> Smc</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Lista Punti di Fornitura -->
  <div class="card">
    <div class="card-header bg-nexus-dark text-white flex justify-between items-center">
      <h4 class="text-lg font-semibold">
        <i class="fas fa-list"></i> 
        Elenco Punti di Fornitura
      </h4>
      <div class="flex items-center space-x-3">
        <span class="text-sm">Totale: <%= (utilities && utilities.length) || 0 %> punti</span>
      </div>
    </div>
    <div class="card-body">
      
      <% if (utilities && utilities.length > 0) { %>
        <div class="table-container">
          <table class="table">
            <thead>
              <tr>
                <th>Tipo</th>
                <th>Codice POD/PDR</th>
                <th>Cliente</th>
                <th>Indirizzo Fornitura</th>
                <th>Consumo Annuo</th>
                <th>Fornitore</th>
                <th>Azioni</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% utilities.forEach(utility => { %>
                <tr>
                  <td class="align-middle">
                    <div class="flex items-center">
                      <div class="bg-<%= utility.type_color || 'gray' %>-100 text-<%= utility.type_color || 'gray' %>-800 px-2 py-1 rounded-full text-xs font-medium flex items-center">
                        <i class="<%= utility.type_icon || 'fas fa-plug' %> mr-1"></i>
                        <%= utility.type %>
                      </div>
                    </div>
                  </td>
                  <td class="align-middle">
                    <div class="font-mono text-sm font-medium text-gray-900">
                      <%= utility.code || 'N/D' %>
                    </div>
                    <% if (utility.supply_type) { %>
                      <div class="text-xs text-gray-500"><%= utility.supply_type %></div>
                    <% } %>
                  </td>
                  <td class="align-middle">
                    <div class="font-medium text-gray-900">
                      <a href="/clients/view/<%= utility.client_id %>" class="text-blue-600 hover:text-blue-800">
                        <%= utility.client_name || 'Nome non disponibile' %>
                      </a>
                    </div>
                    <% if (utility.client_company) { %>
                      <div class="text-sm text-gray-500"><%= utility.client_company %></div>
                    <% } %>
                  </td>
                  <td class="align-middle">
                    <div class="text-sm">
                      <% if (utility.supply_address) { %>
                        <%= utility.supply_address %><br>
                        <%= utility.supply_postal_code || '' %> <%= utility.supply_city || '' %> 
                        <% if (utility.supply_province) { %>(<%= utility.supply_province %>)<% } %>
                      <% } else { %>
                        <span class="text-gray-400">Non specificato</span>
                      <% } %>
                    </div>
                  </td>
                  <td class="align-middle">
                    <% if (utility.annual_consumption && utility.annual_consumption > 0) { %>
                      <div class="font-semibold text-gray-900">
                        <%= parseInt(utility.annual_consumption).toLocaleString() %> <%= utility.consumption_unit || 'kWh' %>
                      </div>
                      <% if (utility.committed_power) { %>
                        <div class="text-xs text-gray-500">Potenza: <%= utility.committed_power %> kW</div>
                      <% } %>
                    <% } else { %>
                      <span class="text-gray-400">Non disponibile</span>
                    <% } %>
                  </td>
                  <td class="align-middle">
                    <div class="text-sm font-medium text-gray-900">
                      <%= utility.current_supplier || 'Non specificato' %>
                    </div>
                    <% if (utility.rate_type) { %>
                      <div class="text-xs text-gray-500"><%= utility.rate_type %></div>
                    <% } %>
                  </td>
                  <td class="align-middle space-x-1">
                    <a href="/supply-points/view/<%= utility.type === 'Elettrica' ? 'electricity' : 'gas' %>/<%= utility.id %>" 
                       class="inline-block bg-blue-100 text-blue-700 p-1.5 rounded hover:bg-blue-200" 
                       title="Visualizza dettagli">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/clients/view/<%= utility.client_id %>" 
                       class="inline-block bg-green-100 text-green-700 p-1.5 rounded hover:bg-green-200" 
                       title="Vai al cliente">
                      <i class="fas fa-user"></i>
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } else { %>
        <div class="text-center py-8">
          <i class="fas fa-plug text-4xl text-gray-300 mb-4"></i>
          <h3 class="text-lg font-medium text-gray-900 mb-2">Nessun Punto di Fornitura</h3>
          <p class="text-gray-500 mb-4">Non sono ancora stati creati punti di fornitura.</p>
          <p class="text-sm text-gray-400 mb-4">
            I punti di fornitura vanno inseriti manualmente dalla sezione "Gestione Utenze" di ogni cliente.
          </p>
          <a href="/clients" class="btn-primary">
            <i class="fas fa-users mr-2"></i>
            Vai ai Clienti
          </a>
        </div>
      <% } %>
      
    </div>
  </div>
  
</div>

<style>
.bg-yellow-100 { background-color: #fef3c7; }
.text-yellow-800 { color: #92400e; }
.bg-orange-100 { background-color: #fed7aa; }
.text-orange-800 { color: #9a3412; }
.bg-gray-100 { background-color: #f3f4f6; }
.text-gray-800 { color: #1f2937; }
</style>