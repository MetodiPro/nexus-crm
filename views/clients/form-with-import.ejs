<!-- Breadcrumb e Titolo -->
<div class="mb-6">
  <nav class="flex" aria-label="Breadcrumb">
    <ol class="inline-flex items-center space-x-1 md:space-x-3">
      <li class="inline-flex items-center">
        <a href="/" class="text-gray-700 hover:text-nexus-red">
          <i class="fas fa-home"></i> Dashboard
        </a>
      </li>
      <li>
        <div class="flex items-center">
          <i class="fas fa-chevron-right text-gray-400 mx-2"></i>
          <a href="/clients" class="text-gray-700 hover:text-nexus-red">Clienti</a>
        </div>
      </li>
      <li>
        <div class="flex items-center">
          <i class="fas fa-chevron-right text-gray-400 mx-2"></i>
          <a href="/clients/import-bill" class="text-gray-700 hover:text-nexus-red">Importa da Bolletta</a>
        </div>
      </li>
      <li aria-current="page">
        <div class="flex items-center">
          <i class="fas fa-chevron-right text-gray-400 mx-2"></i>
          <span class="text-gray-500">Nuovo Cliente</span>
        </div>
      </li>
    </ol>
  </nav>
  <h1 class="text-3xl font-bold text-nexus-dark mt-4">
    <i class="fas fa-user-plus mr-3 text-green-600"></i>
    Nuovo Cliente da Bolletta
  </h1>
  <p class="text-gray-600 mt-2">
    <i class="fas fa-robot mr-2 text-blue-500"></i>
    Dati estratti automaticamente dalla bolletta - Verifica e completa le informazioni
  </p>
</div>

<div class="max-w-6xl mx-auto">
  
  <!-- Alert informativo -->
  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <div class="flex items-start">
      <i class="fas fa-info-circle text-blue-500 text-lg mr-3 mt-1"></i>
      <div>
        <h6 class="font-semibold text-blue-800">Dati Pre-compilati</h6>
        <p class="text-blue-700 text-sm mt-1">
          I campi evidenziati in <span class="bg-green-100 px-1 rounded">verde</span> sono stati compilati automaticamente dalla bolletta.
          Verifica la correttezza dei dati e completa le informazioni mancanti.
        </p>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header bg-nexus-dark text-white">
      <h4 class="text-lg font-semibold">
        <i class="fas fa-user"></i> 
        Nuovo Cliente da Bolletta
      </h4>
    </div>
    <div class="card-body">
      <form action="/clients/new" method="POST" id="clientForm">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        
        <!-- DATI PERSONALI -->
        <div class="mb-6">
          <h5 class="text-lg font-semibold mb-3 text-nexus-red border-b border-gray-300 pb-2">
            <i class="fas fa-user"></i> Dati Personali
          </h5>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <label for="name" class="form-label">Nome *</label>
              <input type="text" class="form-input" id="name" name="name" required>
            </div>
            <div>
              <label for="surname" class="form-label">Cognome *</label>
              <input type="text" class="form-input" id="surname" name="surname" required>
            </div>
            <div>
              <label for="fiscal_code" class="form-label">Codice Fiscale</label>
              <input type="text" class="form-input" id="fiscal_code" name="fiscal_code" 
                     maxlength="16" style="text-transform: uppercase">
            </div>
          </div>
        </div>

        <!-- DATI AZIENDALI -->
        <div class="mb-6">
          <h5 class="text-lg font-semibold mb-3 text-nexus-red border-b border-gray-300 pb-2">
            <i class="fas fa-building"></i> Dati Aziendali (Opzionale)
          </h5>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="company" class="form-label">Ragione Sociale</label>
              <input type="text" class="form-input" id="company" name="company">
            </div>
            <div>
              <label for="vat_number" class="form-label">Partita IVA</label>
              <input type="text" class="form-input" id="vat_number" name="vat_number" maxlength="11">
            </div>
          </div>
        </div>

        <!-- INDIRIZZI -->
        <div class="mb-6">
          <h5 class="text-lg font-semibold mb-3 text-nexus-red border-b border-gray-300 pb-2">
            <i class="fas fa-map-marker-alt"></i> Indirizzi
          </h5>
          <div class="grid grid-cols-1 md:grid-cols-6 gap-4">
            <div class="md:col-span-3">
              <label for="address" class="form-label">Via/Piazza *</label>
              <input type="text" class="form-input" id="address" name="address" required>
            </div>
            <div>
              <label for="postal_code" class="form-label">CAP</label>
              <input type="text" class="form-input" id="postal_code" name="postal_code" maxlength="5">
            </div>
            <div>
              <label for="city" class="form-label">Comune *</label>
              <input type="text" class="form-input" id="city" name="city" required>
            </div>
            <div>
              <label for="province" class="form-label">Provincia</label>
              <input type="text" class="form-input" id="province" name="province" 
                     maxlength="2" style="text-transform: uppercase">
            </div>
          </div>
        </div>

        <!-- CONTATTI -->
        <div class="mb-6">
          <h5 class="text-lg font-semibold mb-3 text-nexus-red border-b border-gray-300 pb-2">
            <i class="fas fa-phone"></i> Contatti
          </h5>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label for="phone" class="form-label">Telefono</label>
              <input type="tel" class="form-input" id="phone" name="phone">
            </div>
            <div>
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-input" id="email" name="email">
            </div>
          </div>
        </div>

        <!-- INFORMAZIONI UTENZE ESTRATTE -->
        <div class="mb-6" id="utilitiesPreview">
          <h5 class="text-lg font-semibold mb-3 text-blue-600 border-b border-gray-300 pb-2">
            <i class="fas fa-plug"></i> Utenze Estratte dalla Bolletta
          </h5>
          <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <p class="text-blue-700 text-sm mb-3">
              <i class="fas fa-info-circle mr-2"></i>
              Le utenze identificate nella bolletta verranno create automaticamente dopo il salvataggio del cliente.
            </p>
            <div id="utilitiesPreviewContent">
              <!-- Popolato dinamicamente da JavaScript -->
            </div>
          </div>
        </div>
        
        <div class="flex justify-between">
          <a href="/clients/import-bill" class="btn-outline">
            <i class="fas fa-arrow-left"></i> Torna all'Import
          </a>
          <button type="submit" class="btn-primary">
            <i class="fas fa-save"></i> Salva Cliente e Crea Utenze
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<style>
.extracted-field {
  background-color: #f0fdf4 !important;
  border-color: #16a34a !important;
}

.extracted-field:focus {
  border-color: #15803d !important;
  box-shadow: 0 0 0 3px rgba(34, 197, 94, 0.1) !important;
}
</style>

<script>
// Dati estratti dalla bolletta (passati tramite URL)
let extractedData = null;

// Parsing dei dati dall'URL
const urlParams = new URLSearchParams(window.location.search);
const dataParam = urlParams.get('data');

if (dataParam) {
  try {
    extractedData = JSON.parse(decodeURIComponent(dataParam));
    console.log('Dati estratti caricati:', extractedData);
    
    // Pre-compila i campi con i dati estratti
    populateFormWithExtractedData();
    
    // Mostra anteprima utenze
    showUtilitiesPreview();
  } catch (error) {
    console.error('Errore nel parsing dei dati estratti:', error);
  }
}

function populateFormWithExtractedData() {
  if (!extractedData) return;
  
  // Mappatura campi form con dati estratti
  const fieldMapping = {
    'name': extractedData.firstName || extractedData.clientName?.split(' ')[0],
    'surname': extractedData.lastName || extractedData.clientName?.split(' ').slice(1).join(' '),
    'fiscal_code': extractedData.fiscalCode,
    'vat_number': extractedData.vatNumber,
    'address': extractedData.supplyAddress,
    'postal_code': extractedData.postalCode,
    'city': extractedData.city,
    'province': extractedData.province
  };
  
  // Compila i campi
  for (const [fieldId, value] of Object.entries(fieldMapping)) {
    if (value) {
      const field = document.getElementById(fieldId);
      if (field) {
        field.value = value;
        field.classList.add('extracted-field');
      }
    }
  }
}

function showUtilitiesPreview() {
  if (!extractedData) {
    document.getElementById('utilitiesPreview').style.display = 'none';
    return;
  }
  
  let html = '<div class="grid grid-cols-1 md:grid-cols-2 gap-4">';
  
  // Utenza elettrica
  if (extractedData.pod || extractedData.powerKw || extractedData.electricityConsumption) {
    html += '<div class="bg-yellow-50 border border-yellow-200 rounded p-3">';
    html += '<h6 class="font-semibold text-yellow-800 mb-2"><i class="fas fa-bolt mr-2"></i>Utenza Elettrica</h6>';
    html += '<div class="text-sm space-y-1">';
    
    if (extractedData.pod) html += `<p><strong>POD:</strong> ${extractedData.pod}</p>`;
    if (extractedData.powerKw) html += `<p><strong>Potenza:</strong> ${extractedData.powerKw} kW</p>`;
    if (extractedData.electricityConsumption) html += `<p><strong>Consumo:</strong> ${extractedData.electricityConsumption.toLocaleString()} kWh/anno</p>`;
    if (extractedData.supplier) html += `<p><strong>Fornitore:</strong> ${extractedData.supplier}</p>`;
    
    html += '</div></div>';
  }
  
  // Utenza gas
  if (extractedData.pdr || extractedData.gasConsumption) {
    html += '<div class="bg-orange-50 border border-orange-200 rounded p-3">';
    html += '<h6 class="font-semibold text-orange-800 mb-2"><i class="fas fa-fire mr-2"></i>Utenza Gas</h6>';
    html += '<div class="text-sm space-y-1">';
    
    if (extractedData.pdr) html += `<p><strong>PDR:</strong> ${extractedData.pdr}</p>`;
    if (extractedData.gasConsumption) html += `<p><strong>Consumo:</strong> ${extractedData.gasConsumption.toLocaleString()} Smc/anno</p>`;
    if (extractedData.supplier) html += `<p><strong>Fornitore:</strong> ${extractedData.supplier}</p>`;
    
    html += '</div></div>';
  }
  
  html += '</div>';
  
  if (html === '<div class="grid grid-cols-1 md:grid-cols-2 gap-4"></div>') {
    document.getElementById('utilitiesPreview').style.display = 'none';
  } else {
    document.getElementById('utilitiesPreviewContent').innerHTML = html;
  }
}

// Intercepta il submit per aggiungere i dati delle utenze
document.getElementById('clientForm').addEventListener('submit', function(e) {
  if (extractedData) {
    // Aggiungi i dati delle utenze come campo nascosto
    const hiddenField = document.createElement('input');
    hiddenField.type = 'hidden';
    hiddenField.name = 'extracted_utilities';
    hiddenField.value = JSON.stringify(extractedData);
    this.appendChild(hiddenField);
  }
});
</script>
